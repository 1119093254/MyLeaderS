<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/My_BabyChangeName_ParentsLayout"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/My_BabyChangeName_returnLayout"
        style="@style/top_APP"
        android:background="@drawable/layout_border_bottom1_white">
        <ImageView
            android:id="@+id/My_BabyChangeName_return"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_centerVertical="true"
            android:src="@drawable/return_arrow"/>
        <TextView
            android:id="@+id/My_BabyChangeName_TopTitle"
            style="@style/text_ww_20_text_grey_2"
            android:layout_centerInParent="true"
            android:text="修改昵称"/>
        <TextView
            android:id="@+id/My_BabyChangeName_save"
            style="@style/text_ww_17_black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="确定"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@drawable/layout_border_bottom1_white">
        <TextView
            android:id="@+id/baby_change_name_text"
            style="@style/text_ww_16_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="昵称:"/>
        <ImageView
            android:id="@+id/baby_change_name_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:layout_marginRight="16dp"
            android:src="@drawable/icon_delete"/>
        <EditText
            android:id="@+id/baby_change_name_EditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:layout_toLeftOf="@id/baby_change_name_delete"
            android:layout_toRightOf="@id/baby_change_name_text"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="16dp"
            android:background="@null"
            android:textSize="16sp"
            android:textColor="@color/text_black"
            android:textColorHint="@color/light_grey_2"
            android:hint="请输入昵称"/>
    </RelativeLayout>
</LinearLayout>