<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/Setting_Change_ParentLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_grey"
    >
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/Setting_Change_Parents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImageScaleType="fitXY"
        fresco:failureImageScaleType="fitXY"
        fresco:placeholderImage="@drawable/info_photoyou"
        fresco:failureImage="@drawable/info_photoyou"
        />
    <RelativeLayout
        android:id="@+id/Setting_Change_topLayout"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/Setting_Change_pic"
            android:layout_width="135dp"
            android:layout_height="135dp"
            fresco:roundAsCircle="true"
            fresco:placeholderImage="@drawable/info_photoyou"
            fresco:failureImage="@drawable/info_photoyou"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:src="@drawable/copy_success"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/Setting_Change_nameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Setting_Change_topLayout"
        android:layout_marginTop="22dp">
        <TextView
            android:id="@+id/Setting_Change_name"
            style="@style/text_ww_16_white"
            android:text=""/>
        <TextView
            android:id="@+id/Setting_Change_Type"
            style="@style/text_ww_16_white"
            android:text="(家长端)"/>
    </LinearLayout>

    <TextView
        android:id="@+id/Setting_Change_hint"
        style="@style/text_ww_16_white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Setting_Change_topLayout"
        android:layout_marginTop="22dp"
        android:visibility="gone"
        android:text="请输入切换密码"/>
    <TextView
        android:id="@+id/Setting_Change_phone"
        style="@style/text_ww_16_white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Setting_Change_nameLayout"
        android:layout_marginTop="19dp"
        android:text=""/>
    <com.multshows.Views.MyEditText
        android:id="@+id/Setting_Change_textHint"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:background="@null"
        android:visibility="gone"
        android:maxLength="4"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Setting_Change_nameLayout"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/Setting_Change_login"
        android:layout_width="158dp"
        android:layout_height="40dp"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/shape_alight_4"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Setting_Change_phone"
        android:layout_marginTop="66dp"
        android:text="登 录"
        />


    <TextView
        android:id="@+id/Setting_Change_islogin"
       style="@style/text_ww_17_white"
       android:layout_centerHorizontal="true"
       android:layout_below="@id/Setting_Change_phone"
       android:layout_marginTop="78dp"
       android:text="当前已登录"/>


</RelativeLayout>