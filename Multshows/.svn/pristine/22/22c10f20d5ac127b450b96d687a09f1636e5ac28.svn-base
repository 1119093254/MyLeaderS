<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/friends_Interaction_ParentsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/background_grey"
    tools:context="com.multshows.Activity.Friends_Interaction_Activity">
    <RelativeLayout
        android:id="@+id/friends_Interaction_returnLayout"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@drawable/layout_border_bottom1_white">
        <ImageView
            android:id="@+id/friends_Interaction_return"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_centerVertical="true"
            android:src="@drawable/return_arrow"/>

        <TextView
            android:id="@+id/friends_Interaction_TopTitle"
            style="@style/text_ww_20_text_grey_2"
            android:layout_centerInParent="true"
            android:text="互动消息"/>
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/friends_Interaction_Group"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:background="@drawable/layout_border_top1_bottom1_white"
        android:layout_below="@id/friends_Interaction_returnLayout"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/friends_Interaction_RadioBtn_comm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:checked="true"
            android:button="@null"
            android:textColor="@color/radiobutton_text"
            android:text="评论"/>
        <RadioButton
            android:id="@+id/friends_Interaction_RadioBtn_Zan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:button="@null"
            android:textColor="@color/radiobutton_text"
            android:text="点赞"/>
        <RadioButton
            android:id="@+id/friends_Interaction_RadioBtn_ReWord"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:button="@null"
            android:textColor="@color/radiobutton_text"
            android:text="打赏"/>
        <RadioButton
            android:id="@+id/friends_Interaction_RadioBtn_Flower"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:button="@null"
            android:textColor="@color/radiobutton_text"
            android:text="鲜花"/>
        <!--<RadioButton
            android:id="@+id/friends_Interaction_RadioBtn_head"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:button="@null"
            android:textColor="@color/radiobutton_text"
            android:text="掌声"/>-->
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_below="@id/friends_Interaction_returnLayout"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:focusable="true"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:id="@+id/friends_news_PL_NoReader"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="35dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_circle"
                android:visibility="invisible"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:id="@+id/friends_news_DZ_NoReader"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="35dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_circle"
                android:visibility="invisible"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:id="@+id/friends_news_DS_NoReader"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="35dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_circle"
                android:visibility="invisible"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:id="@+id/friends_news_XH_NoReader"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="35dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_circle"
                android:visibility="invisible"
                />
        </RelativeLayout>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/friends_Interaction_ViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/friends_Interaction_Group"/>

</RelativeLayout>
