<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/friends_allList_userHeader"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            fresco:failureImage="@drawable/info_photoyou"
            fresco:placeholderImage="@drawable/info_photoyou"
            fresco:roundAsCircle="true"/>

        <TextView
            android:id="@+id/friends_allList_userName"
            style="@style/text_ww_17_black"
            android:layout_alignTop="@id/friends_allList_userHeader"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/friends_allList_userHeader"
            android:text="羊羊羊"/>

        <TextView
            android:id="@+id/friends_allList_sendTime"
            style="@style/text_ww_13_light_grey"
            android:layout_alignBottom="@id/friends_allList_userHeader"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/friends_allList_userHeader"
            android:text="昨天21:26"/>

        <Button
            android:id="@+id/friends_allList_button"
            android:layout_width="49dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:background="@drawable/shape_button_green_5"
            android:gravity="center"
            android:text="回复"
            android:textColor="@color/text_green"
            android:textSize="11sp"/>
    </RelativeLayout>
    <!--评论布局-->
    <LinearLayout
        android:id="@+id/friends_allList_commentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:visibility="gone">
        <TextView
            style="@style/text_ww_17_black"
            android:text="评论@"/>
        <TextView
            android:id="@+id/friends_allList_myID"
            style="@style/text_ww_17_black"
            android:text="我的ID"/>
        <TextView
            style="@style/text_ww_17_black"
            android:text=":"/>
        <TextView
            android:id="@+id/friends_allList_comment"
            style="@style/text_ww_17_black"
            android:gravity="left"
            android:text="评论内容......."/>
    </LinearLayout>
    <!--赞布局-->
    <LinearLayout
        android:id="@+id/friends_allList_zanLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:visibility="gone">
        <TextView
            style="@style/text_ww_17_black"
            android:text="赞了我的作品啦"/>
    </LinearLayout>
    <!--公益布局-->
    <LinearLayout
        android:id="@+id/friends_allList_loveLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:gravity="center_vertical"
        android:visibility="gone">
       <ImageView
           android:id="@+id/friends_allList_giveImage"
           android:layout_width="25dp"
           android:layout_height="25dp"
           android:src="@drawable/info_hand"/>
        <TextView
            android:id="@+id/friends_allList_giveMe"
            style="@style/text_ww_17_black"
            android:layout_marginLeft="16dp"
            android:text="昵称"/>
        <TextView
            android:id="@+id/friends_allList_giveText"
            style="@style/text_ww_17_black"
            android:text="给我的公益送掌声啦!"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/friends_allList_ShowsLayout"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/friends_allList_SSuserPic"
            android:layout_width="67dp"
            android:layout_height="67dp"
            fresco:failureImage="@drawable/info_photoyou"
            fresco:placeholderImage="@drawable/info_photoyou"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingTop="14dp">
            <TextView
                android:id="@+id/friends_allList_text"
                style="@style/text_ww_17_black"
                android:text=" @"/>
            <TextView
                android:id="@+id/friends_allList_SSuserName"
                style="@style/text_ww_17_black"
                android:layout_toRightOf="@id/friends_allList_text"
                android:text="羊羊羊"/>
            <TextView
                android:id="@+id/friends_allList_SScontent"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/friends_allList_text"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="13sp"
                android:textColor="@color/light_grey"
                android:text="说说内容"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:background="@drawable/layout_border_top1_bottom1_grey"/>
</LinearLayout>