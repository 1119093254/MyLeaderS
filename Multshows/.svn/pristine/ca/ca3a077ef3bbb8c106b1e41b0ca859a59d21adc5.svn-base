<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/My_FlowerMarket_ParentsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    tools:context="com.multshows.Activity.My_FlowerMarket_Activity">
    <RelativeLayout
        android:id="@+id/My_FlowerMarket_TopLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/flower_topimg">

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">
        <RelativeLayout
            style="@style/top_APP"
            >
            <ImageView
                android:id="@+id/My_FlowerMarket_return"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_centerVertical="true"
                android:src="@drawable/return_arrow"/>
            <TextView
                android:id="@+id/My_FlowerMarket_Title"
                style="@style/text_ww_20_text_grey_2"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:background="@drawable/item_flower_wordbg"
                android:text="鲜花市场"/>
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/My_FlowerMarket_TopLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="43dp"
                android:background="@drawable/shape_grey_9">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/My_FlowerMarket_userHeader"
                    android:layout_width="67dp"
                    android:layout_height="67dp"
                    fresco:roundAsCircle="true"
                    fresco:placeholderImage="@drawable/info_photoyou"
                    fresco:failureImage="@drawable/info_photoyou"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/My_FlowerMarket_userHeader"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="9dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                           style="@style/text_ww_14_light_grey"
                            android:text="我的鲜花(朵)"/>
                        <TextView
                            android:id="@+id/My_FlowerMarket_myFlower"
                            style="@style/text_ww_20_light_grey"
                            android:layout_marginTop="9dp"
                            android:text="0"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            style="@style/text_ww_14_light_grey"
                            android:text="我的余额(元)"/>
                        <TextView
                            android:id="@+id/My_FlowerMarket_myBalance"
                            style="@style/text_ww_20_light_grey"
                            android:layout_marginTop="9dp"
                            android:text="0"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/item_flower_shelf"
                    android:layout_marginTop="50dp">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">
                    <RelativeLayout
                        android:id="@+id/My_FlowerMarket_flower50"
                        android:layout_width="67dp"
                        android:layout_height="67dp"
                        android:background="@drawable/shape_alight_grey_2"
                        android:padding="2dp">
                        <ImageView
                            android:id="@+id/My_FlowerMarket_flowerImage50"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/money_flower_hua"/>
                        <TextView
                            style="@style/text_mw_14_white"
                            android:background="@drawable/shape_alight60_grey_2"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:text="50朵"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/My_FlowerMarket_flower100"
                        android:layout_width="67dp"
                        android:layout_height="67dp"
                        android:background="@drawable/shape_alight_grey_2"
                        android:layout_marginLeft="8dp"
                        android:padding="2dp">
                        <ImageView
                            android:id="@+id/My_FlowerMarket_flowerImage100"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/money_flower_hua"/>
                        <TextView
                            style="@style/text_mw_14_white"
                            android:background="@drawable/shape_alight60_grey_2"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:text="100朵"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/My_FlowerMarket_flower200"
                        android:layout_width="67dp"
                        android:layout_height="67dp"
                        android:background="@drawable/shape_alight_grey_2"
                        android:layout_marginLeft="8dp"
                        android:padding="2dp">
                        <ImageView
                            android:id="@+id/My_FlowerMarket_flowerImage200"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/money_flower_hua"/>
                        <TextView
                            style="@style/text_mw_14_white"
                            android:background="@drawable/shape_alight60_grey_2"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:text="200朵"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/item_flower_shelf"
                    android:layout_marginTop="50dp">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">
                    <RelativeLayout
                        android:id="@+id/My_FlowerMarket_flower1"
                        android:layout_width="67dp"
                        android:layout_height="67dp"
                        android:background="@drawable/shape_alight_grey_2"
                        android:padding="2dp">
                        <ImageView
                            android:id="@+id/My_FlowerMarket_flowerImage1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/money_flower_hua"/>
                        <TextView
                            style="@style/text_mw_14_white"
                            android:background="@drawable/shape_alight60_grey_2"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:text="1朵"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/My_FlowerMarket_flower10"
                        android:layout_width="67dp"
                        android:layout_height="67dp"
                        android:background="@drawable/shape_alight_grey_2"
                        android:layout_marginLeft="8dp"
                        android:padding="2dp">
                        <ImageView
                            android:id="@+id/My_FlowerMarket_flowerImage10"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/money_flower_hua"/>
                        <TextView
                            style="@style/text_mw_14_white"
                            android:background="@drawable/shape_alight60_grey_2"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:text="10朵"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/My_FlowerMarket_flower20"
                        android:layout_width="67dp"
                        android:layout_height="67dp"
                        android:background="@drawable/shape_alight_grey_2"
                        android:layout_marginLeft="8dp"
                        android:padding="2dp">
                        <ImageView
                            android:id="@+id/My_FlowerMarket_flowerImage20"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/money_flower_hua"/>
                        <TextView
                            style="@style/text_mw_14_white"
                            android:background="@drawable/shape_alight60_grey_2"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:text="20朵"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:background="@drawable/layout_border_top1_bottom1_white"
                android:layout_marginTop="29dp">
                <TextView
                    android:id="@+id/My_FlowerMarket_text"
                    style="@style/text_ww_16_black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="鲜花数量:"/>
                <EditText
                    android:id="@+id/My_FlowerMarket_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="90dp"
                    android:maxLines="1"
                    android:maxLength="8"
                    android:inputType="number"
                    android:background="@null"
                    android:textSize="16sp"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/text_white_c"
                    android:hint="输入购买鲜花数量(1朵/0.1元)"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="53dp">
                <TextView
                    android:id="@+id/My_FlowerMarket_BuyMoney"
                    style="@style/text_ww_14_text_grey_2"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="鲜花金额:"/>
                <TextView
                android:id="@+id/My_FlowerMarket_BuyMoneyEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textColor="@color/yellow"
                android:text="¥0"/>
            </RelativeLayout>
            <!--<TextView
                style="@style/text_ww_11_light_grey"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="17dp"
                android:text="1朵花=0.1元"/>-->
            <Button
                android:id="@+id/my_recharge_fragment_Button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginTop="33dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="31dp"
                android:background="@drawable/shape_green_4"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="立即支付"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
