<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/border_4_grey_1">

            <ImageView
                android:id="@+id/chat_Add_View_tackPhoto"
                android:layout_width="40dp"
                android:layout_height="33dp"
                android:layout_centerInParent="true"
                android:src="@drawable/info_tackphoto"/>
        </RelativeLayout>

        <TextView
            style="@style/text_mw_13_grey_2"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="拍照"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/border_4_grey_1">

            <ImageView
                android:id="@+id/chat_Add_View_localPhoto"
                android:layout_width="40dp"
                android:layout_height="33dp"
                android:layout_centerInParent="true"
                android:src="@drawable/info_pnhot"/>
        </RelativeLayout>

        <TextView
            style="@style/text_mw_13_grey_2"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="相册"/>
    </LinearLayout>

</LinearLayout>