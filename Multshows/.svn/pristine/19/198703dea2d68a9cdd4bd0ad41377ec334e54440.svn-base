<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ZP_Message_TgtimeIcon"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/icon_cashyes"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="28dp"/>
                <LinearLayout
                    android:id="@+id/ZP_Message_TgMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/ZP_Message_TgtimeIcon"
                    android:layout_marginTop="22dp"
                    android:gravity="center_vertical">
                    <TextView
                        style="@style/text_ww_20_text_grey_2"
                        android:text="+¥"/>
                    <TextView
                        android:id="@+id/ZP_Message_Tgmoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:textSize="34sp"
                        android:textColor="@color/text_grey_2"
                        android:text="0.0"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/ZP_Message_TgBankHint"
                    style="@style/text_ww_13_light_grey"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/ZP_Message_TgMoney"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="17dp"
                    android:text="推广奖励"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="17dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/text_ww_14_text_grey_2"
                        android:text="推广级别:"/>
                    <TextView
                        android:id="@+id/ZP_Message_AllTgLL"
                        style="@style/text_ww_14_light_grey"
                        android:layout_alignParentRight="true"
                        android:text=""/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <TextView
                        style="@style/text_ww_14_text_grey_2"
                        android:text="推广利率:"/>
                    <TextView
                        android:id="@+id/ZP_Message_TgJB"
                        style="@style/text_ww_14_light_grey"
                        android:layout_alignParentRight="true"
                        android:text=""/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="17dp"
                    android:background="@drawable/layout_border_bottom1_white">
                    <TextView
                        style="@style/text_ww_16_light_grey"
                        android:layout_centerVertical="true"
                        android:text="奖励方式"/>
                    <TextView
                        android:id="@+id/ZP_Message_TgText"
                        style="@style/text_ww_16_text_grey_2"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="17dp"
                        android:text=""/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="17dp">
                    <TextView
                        style="@style/text_ww_16_light_grey"
                        android:layout_centerVertical="true"
                        android:text="创建时间"/>
                    <TextView
                        android:id="@+id/ZP_Message_TgTime"
                        style="@style/text_ww_16_text_grey_2"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="17dp"
                        android:text=""/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>