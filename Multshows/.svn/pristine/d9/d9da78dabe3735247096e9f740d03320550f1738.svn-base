<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="9dp"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="63dp">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/My_BankList_BankIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="17dp"
                android:layout_centerVertical="true"
                fresco:failureImage="@drawable/defult"
                fresco:placeholderImage="@drawable/defult"
                />
            <TextView
                android:id="@+id/My_BankList_BankName"
                style="@style/text_ww_16_black"
                android:layout_alignTop="@id/My_BankList_BankIcon"
                android:layout_toRightOf="@id/My_BankList_BankIcon"
                android:layout_marginLeft="16dp"
                android:text=""/>
            <TextView
                android:id="@+id/My_BankList_BankType"
                style="@style/text_ww_14_light_grey"
                android:layout_alignBottom="@id/My_BankList_BankIcon"
                android:layout_toRightOf="@id/My_BankList_BankIcon"
                android:layout_marginLeft="16dp"
                android:text=""/>
            <TextView
                android:id="@+id/My_BankList_BankNumber"
                style="@style/text_ww_16_black"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/My_BankList_BankIcon"
                android:layout_marginRight="17dp"
                android:text=""/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/My_BankList_DeleteLayout"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/layout_border_top1_white">
            <Button
                android:id="@+id/My_BankList_DeleteBank"
                android:layout_width="79dp"
                android:layout_height="29dp"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/shape_alight_green_4"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="17dp"
                android:textSize="15sp"
                android:textColor="@color/text_green"
                android:text="删除"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>