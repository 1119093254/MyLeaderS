<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp">

        <TextView
            android:id="@+id/my_ReWordList_item_time1"
            style="@style/text_ww_16_light_grey"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="13dp"
            android:text="昨天"/>

        <TextView
            android:id="@+id/my_ReWordList_item_time2"
            style="@style/text_ww_11_light_grey"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="12dp"
            android:text="00:00"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/my_ReWordList_item_userHeader"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="85dp"
            fresco:failureImage="@drawable/info_photoyou"
            fresco:placeholderImage="@drawable/info_photoyou"
            fresco:roundAsCircle="true"/>

        <TextView
            android:id="@+id/my_ReWordList_item_userName"
            style="@style/text_ww_16_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="76dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@id/my_ReWordList_item_userHeader"
            android:text="昵称"/>
        <Button
            android:id="@+id/my_ReWordList_item_GetMoney"
            android:layout_width="60dp"
            android:layout_height="28dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/shape_green_4"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="领取"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:background="@drawable/layout_border_top1_white">

        <TextView
            android:id="@+id/my_ReWordList_item_Money2_text"
            style="@style/text_ww_14_text_grey_2"
            android:layout_marginTop="16dp"
            android:text="打赏金额:"/>

        <TextView
            android:id="@+id/my_ReWordList_item_Money2_text2"
            style="@style/text_ww_14_text_grey_2"
            android:layout_below="@id/my_ReWordList_item_Money2_text"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="手续费:"/>
        <TextView
            android:id="@+id/my_ReWordList_item_Money2_Money"
            style="@style/text_ww_14_text_green"
            android:layout_alignTop="@id/my_ReWordList_item_Money2_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:text="¥0.0"/>
        <TextView
            android:id="@+id/my_ReWordList_item_Money2_Fei"
            style="@style/text_ww_14_text_green"
            android:layout_alignTop="@id/my_ReWordList_item_Money2_text2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:text="-¥0.0"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="17dp"
        android:background="@drawable/layout_border_top1_white">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp">
            <TextView
                android:id="@+id/my_ReWordList_item_Money2_TrueMoneyText"
                style="@style/text_ww_18_text_green"
                android:text="实际收到打赏金额:"/>
            <TextView
                android:id="@+id/my_ReWordList_item_Money2_TrueMoney1"
                style="@style/text_ww_18_text_green"
                android:layout_marginLeft="16dp"
                android:text="¥0"/>
            <TextView
                android:id="@+id/my_ReWordList_item_Money2_TrueMoney2"
                style="@style/text_ww_14_text_green"
                android:text=".0"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:background="@color/background_grey">
    </LinearLayout>
</LinearLayout>