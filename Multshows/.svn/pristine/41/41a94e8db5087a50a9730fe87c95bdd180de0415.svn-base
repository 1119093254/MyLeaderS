<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:id="@+id/my_SexChange_fragment_ListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/layout_border_top1_bottom1_white">
            <RelativeLayout
                android:id="@+id/my_SexChange_fragment_boyLayout"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@drawable/layout_border_bottom1_white">
                <TextView
                    style="@style/text_ww_16_black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="男"/>
                <ImageView
                    android:id="@+id/my_SexChange_fragment_boy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/item_security_choce"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/my_SexChange_fragment_girlLayout"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@drawable/layout_border_bottom1_white"
                >
                <TextView
                    style="@style/text_ww_16_black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="女"/>
                <ImageView
                    android:id="@+id/my_SexChange_fragment_girl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"
                    android:src="@drawable/item_security_choce"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/my_SexChange_fragment_baomiLayout"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                >
                <TextView
                    style="@style/text_ww_16_black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="保密"/>
                <ImageView
                    android:id="@+id/my_SexChange_fragment_baomi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"
                    android:src="@drawable/item_security_choce"/>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>