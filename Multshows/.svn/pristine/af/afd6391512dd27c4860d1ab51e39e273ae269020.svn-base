<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/My_Order_Editor_ParentsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.multshows.Activity.My_Order_Editor_Activity">

    <RelativeLayout
        android:id="@+id/My_Order_Editor_returnLayout"
        style="@style/top_APP"
        android:background="@drawable/layout_border_bottom1_white">

        <ImageView
            android:id="@+id/My_Order_Editor_return"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_centerVertical="true"
            android:src="@drawable/return_arrow"/>

        <TextView
            android:id="@+id/My_Order_Editor_TopTitle"
            style="@style/text_ww_20_text_grey_2"
            android:layout_centerInParent="true"
            android:text="编辑"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/layout_border_top1_bottom1_white">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/My_Order_Editor_photo"
            android:layout_width="67dp"
            android:layout_height="67dp"
            fresco:failureImage="@drawable/defult"
            fresco:placeholderImage="@drawable/defult"
            />

        <TextView
            android:id="@+id/My_Order_Editor_name"
            style="@style/text_ww_14_text_grey_2"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/My_Order_Editor_photo"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="商品名称"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/My_Order_Editor_photo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp">
            <TextView
                android:id="@+id/My_Order_Editor_money"
                style="@style/text_ww_14_text_grey_2"
                android:text="0.00"/>
            <TextView
                android:id="@+id/My_Order_Editor_yunfei"
                style="@style/text_ww_14_light_grey"
                android:layout_marginLeft="6dp"
                android:text="0.00"/>
        </LinearLayout>

        <TextView
            android:id="@+id/My_Order_Editor_place"
            style="@style/text_ww_14_text_green"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/My_Order_Editor_photo"
            android:layout_alignBottom="@id/My_Order_Editor_photo"
            android:text="来自"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="9dp"
        android:background="@drawable/layout_border_top1_bottom1_white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/layout_border_bottom1_white"
            >
            <TextView
                android:id="@+id/My_Order_Editor_text_1"
                style="@style/text_ww_15_text_grey_2"
                android:layout_centerVertical="true"
                android:text="宝贝价格:"/>
            <EditText
                android:id="@+id/My_Order_Editor_EditText1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:numeric="decimal"
                android:singleLine="true"
                android:layout_marginLeft="99dp"
                android:textColor="@color/text_black"
                android:textSize="15sp"
                android:textColorHint="@color/light_grey"
                android:hint="请输入价格"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/layout_border_bottom1_white"
            >
            <TextView
                android:id="@+id/My_Order_Editor_text_2"
                style="@style/text_ww_15_text_grey_2"
                android:layout_centerVertical="true"
                android:text="运费:"/>
            <EditText
                android:id="@+id/My_Order_Editor_EditText2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:numeric="decimal"
                android:singleLine="true"
                android:layout_marginLeft="99dp"
                android:textColor="@color/text_black"
                android:textSize="15sp"
                android:textColorHint="@color/light_grey"
                android:hint="请输入价格"
                />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/My_Order_Editor_Button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_alignParentBottom="true"
            android:background="@color/text_green"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="确定"/>
    </RelativeLayout>
    
</LinearLayout>
