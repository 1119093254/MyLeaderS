<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_grey"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/my_kitting_fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="@drawable/layout_border_top1_bottom1_white">

        <ImageView
            android:id="@+id/my_kitting_fragment_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/payment_yimadai_logo"/>

        <TextView
            style="@style/text_ww_16_black"
            android:layout_alignTop="@id/my_kitting_fragment_image"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@id/my_kitting_fragment_image"
            android:text="一麻袋账户"/>

        <TextView
            android:id="@+id/my_kitting_fragment_YMD"
            style="@style/text_ww_14_light_grey"
            android:layout_alignBottom="@id/my_kitting_fragment_image"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@id/my_kitting_fragment_image"
            android:text="点击绑定一麻袋"/>
        <ImageView
            android:id="@+id/my_kitting_fragment_toBound"
            android:layout_width="8dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/item_shipping_address_gonext"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/layout_border_top1_bottom1_white">

        <TextView
            android:id="@+id/my_kitting_fragment_text"
            style="@style/text_ww_16_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:text="金额:"/>

        <EditText
            android:id="@+id/my_kitting_fragment_editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@id/my_kitting_fragment_text"
            android:background="@null"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:hint="输入提现金额"
            android:textColor="@color/text_black"
            android:textSize="16sp"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/my_kitting_fragment_Button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/shape_green_4"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="20sp"/>

</LinearLayout>