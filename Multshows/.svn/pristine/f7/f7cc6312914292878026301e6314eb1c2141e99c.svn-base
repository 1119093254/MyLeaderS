<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Search2_ParentsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context="com.multshows.Activity.Search_Activity">

    <RelativeLayout
        android:id="@+id/Search_ReturnLayout"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@drawable/layout_border_bottom1_white">

        <ImageView
            android:id="@+id/Search_return"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_centerVertical="true"
            android:src="@drawable/return_arrow"/>

        <TextView
            android:id="@+id/Search_Search"
            style="@style/text_ww_14_light_grey_3"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:text="搜索"/>

        <RelativeLayout
            android:id="@+id/Search2_imageLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="6dp"
            android:layout_toLeftOf="@id/Search_Search"
            android:layout_toRightOf="@id/Search_return"
            android:background="@drawable/shape_grey_4"
            android:visibility="gone">

            <ImageView
                android:id="@+id/Search_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/money_glass"/>

            <EditText
                android:id="@+id/Search_editText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="-5dp"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@id/Search_image"
                android:background="@color/border_grey"
                android:gravity="left|center_vertical"
                android:textSize="14sp"
                android:hint="搜索内容、账号、昵称"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Search2_imageLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/Search_Search"
            android:layout_toRightOf="@id/Search_return"
            android:layout_marginRight="11dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/search_boxbg">
            <ImageView
                android:id="@+id/Search2_serchImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/icon_searchimg"
                />
            <EditText
                android:id="@+id/Search2_editText2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/Search2_serchImage"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="16dp"
                android:maxLines="1"
                android:singleLine="true"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:textSize="14sp"
                android:textColorHint="@color/text_green"
                android:hint="搜索内容、账号、昵称"/>
        </RelativeLayout>
    </RelativeLayout>
    <com.multshows.Views.PullToRefresh
        android:id="@+id/Search2_Refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/Search_ReturnLayout"
        >
                <ListView
                    android:id="@+id/Search_ListView_Beans"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:scrollbars="none"/>

                <TextView
                    android:id="@+id/Search_NoView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/light_grey"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"
                    android:text="对不起,搜索不到相关信息"/>

            <!--</RelativeLayout>-->
    </com.multshows.Views.PullToRefresh>
    <RelativeLayout
        android:id="@+id/Search_BottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/edit_grey">
        <RelativeLayout
            android:id="@+id/Search_editTextLayout"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            >

            <ImageView
                android:id="@+id/Search_Face"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:src="@drawable/info_face"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/Search_Send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:textColor="@color/text_green"
                android:textSize="14sp"
                android:text="发送"/>
            <com.rockerhieu.emojicon.EmojiconEditText
                android:id="@+id/Search_EditText"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="18dp"
                android:layout_toLeftOf="@id/Search_Send"
                android:layout_toRightOf="@id/Search_Face"
                android:background="@drawable/border_9_white"
                android:hint="输入内容..."
                android:paddingLeft="10dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Search_bottom_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Search_editTextLayout"
            android:visibility="gone"
            >

            <FrameLayout
                android:id="@+id/Search_bottom_fragment"
                class="com.rockerhieu.emojicon.EmojiconsFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
