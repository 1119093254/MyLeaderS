<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Add_BankCord_ParentsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/background_grey"
    android:orientation="vertical"
    tools:context="com.multshows.Activity.Add_BankCord_Activity">
    <RelativeLayout
        android:id="@+id/Add_BankCord_returnLayout"
        style="@style/top_APP"
        android:background="@drawable/layout_border_bottom1_white">
        <ImageView
            android:id="@+id/Add_BankCord_return"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_centerVertical="true"
            android:src="@drawable/return_arrow"/>
        <TextView
            android:id="@+id/Add_BankCord_Title"
            style="@style/text_ww_20_text_grey_2"
            android:layout_centerInParent="true"
            android:text="添加银行卡"/>
    </RelativeLayout>
    <com.multshows.Views.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/light_grey"
                android:textSize="14sp"
                android:paddingLeft="17dp"
                android:paddingTop="16dp"
                android:paddingBottom="9dp"
                android:text="请绑定持卡人本人的银行卡"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/layout_border_top1_bottom1_white">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_marginLeft="17dp"
                    android:background="@drawable/layout_border_bottom1_white">
                    <TextView
                        android:id="@+id/Add_BankCord_name"
                        style="@style/text_ww_16_black"
                        android:layout_centerVertical="true"
                        android:text="持卡人:"/>
                    <EditText
                        android:id="@+id/Add_BankCord_nameEdit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_marginLeft="80dp"
                        android:textColor="@color/text_black"
                        android:textSize="16sp"
                        android:textColorHint="@color/text_white_c"
                        android:hint="请输入您的真实姓名"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_marginLeft="17dp"
                    android:background="@drawable/layout_border_bottom1_white">
                    <TextView
                        android:id="@+id/Add_BankCord_IDCard"
                        style="@style/text_ww_16_black"
                        android:layout_centerVertical="true"
                        android:text="身份证号:"/>
                    <EditText
                        android:id="@+id/Add_BankCord_IDCardEdit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_marginLeft="80dp"
                        android:inputType="number"
                        android:digits="0123456789xyzXYZ"
                        android:textColor="@color/text_black"
                        android:textSize="16sp"
                        android:textColorHint="@color/text_white_c"
                        android:hint="请输入您的身份证号"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/Add_BankCord_BankTypeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_marginLeft="17dp"
                    android:background="@drawable/layout_border_bottom1_white">
                    <TextView
                        android:id="@+id/Add_BankCord_BankType"
                        style="@style/text_ww_16_black"
                        android:layout_centerVertical="true"
                        android:text="卡类型:"/>
                    <TextView
                        android:id="@+id/Add_BankCord_BankTypeText"
                        style="@style/text_ww_16_black"
                        android:layout_marginLeft="80dp"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:id="@+id/Add_BankCord_BankTypeImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/item_register_chocedown"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/Add_BankCord_BankTypeContent"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <ListView
                        android:id="@+id/Add_BankCord_BankTypeContentListView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@null"
                        android:scrollbars="none"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_marginLeft="17dp"
                    android:background="@drawable/layout_border_bottom1_white">
                    <TextView
                        android:id="@+id/Add_BankCord_Bank"
                        style="@style/text_ww_16_black"
                        android:layout_centerVertical="true"
                        android:text="银行卡:"/>
                    <EditText
                        android:id="@+id/Add_BankCord_BankEdit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_marginLeft="80dp"
                        android:inputType="number"
                        android:textColor="@color/text_black"
                        android:textSize="16sp"
                        android:textColorHint="@color/text_white_c"
                        android:hint="请输入您的银行卡号"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_marginLeft="17dp"
                    android:background="@drawable/layout_border_bottom1_white">
                    <TextView
                        android:id="@+id/Add_BankCord_phone"
                        style="@style/text_ww_16_black"
                        android:layout_centerVertical="true"
                        android:text="手机号:"/>
                    <EditText
                        android:id="@+id/Add_BankCord_phoneEdit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_marginLeft="80dp"
                        android:inputType="number"
                        android:textColor="@color/text_black"
                        android:textSize="16sp"
                        android:textColorHint="@color/text_white_c"
                        android:hint="请输入银行预存手机号"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/Add_BankCord_CityLayout"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_marginLeft="17dp">
                    <TextView
                        android:id="@+id/Add_BankCord_City"
                        style="@style/text_ww_16_black"
                        android:layout_centerVertical="true"
                        android:text="开户城市:"/>
                    <ImageView
                        android:id="@+id/Add_BankCord_CityImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="80dp"
                        android:src="@drawable/map_addressimg0"/>
                    <TextView
                        android:id="@+id/Add_BankCord_CityText"
                        style="@style/text_ww_16_black"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/Add_BankCord_CityImage"
                        android:layout_marginLeft="9dp"
                        android:gravity="right"
                        android:textColorHint="@color/text_white_c"
                        android:hint="点击选择开户城市"/>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/layout_border_top1_bottom1_white">
                <TextView
                    style="@style/text_ww_16_black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:text="设为默认"/>
                <CheckBox
                    android:id="@+id/Add_BankCord_Message"
                    android:layout_width="57dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="17dp"
                    android:layout_centerVertical="true"
                    android:button="@null"
                    android:background="@drawable/checkbox_message"/>
            </RelativeLayout>
            <Button
                android:id="@+id/Add_BankCord_Button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_green_4"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="提交"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="17dp">
                <TextView
                    style="@style/text_ww_11_light_grey"
                    android:text="点击提交即已阅读并同意"/>
                <TextView
                    android:id="@+id/Add_BankCord_XieYi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="@color/text_green"
                    android:text="《领秀S用户协议》"/>
            </LinearLayout>
        </LinearLayout>
    </com.multshows.Views.MyScrollView>

</LinearLayout>
