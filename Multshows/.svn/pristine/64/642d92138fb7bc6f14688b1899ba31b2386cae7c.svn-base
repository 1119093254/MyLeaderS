<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="30dp"
              android:background="@drawable/border_commentlayout"
              android:gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/likeTextLayout"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/momindex_iocn01"
                android:id="@+id/likeimage"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/likeimage"
                android:id="@+id/likeText"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:text="赞    "/>
        </RelativeLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/likeTextLayout"
            android:layout_alignBottom="@+id/likeTextLayout"
            android:id="@+id/likeLine"
            android:layout_toRightOf="@+id/likeTextLayout"
            android:background="#24BD8A"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/commentLayout"
            android:layout_toRightOf="@+id/likeLine"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/momindex_iocn04"
                android:id="@+id/flowerimage"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/flowerimage"
                android:layout_marginLeft="4dp"
                android:id="@+id/flowerText"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:text="评论"/>
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/likeTextLayout"
            android:layout_alignBottom="@+id/likeTextLayout"
            android:layout_marginLeft="10dp"
            android:id="@+id/flowerLine"
            android:layout_toRightOf="@+id/commentLayout"
            android:background="#24BD8A"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/ShareLayout"
            android:layout_toRightOf="@+id/flowerLine"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/item_share"
                android:id="@+id/rewardimage"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rewardText"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/rewardimage"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="10dp"
                android:text="分享"/>
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>