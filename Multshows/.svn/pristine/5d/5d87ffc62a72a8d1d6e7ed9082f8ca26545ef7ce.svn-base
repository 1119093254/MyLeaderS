<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/My_BankList_ParentsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/background_grey"
    android:orientation="vertical"
    tools:context="com.multshows.Activity.My_BankList_Activity">
    <RelativeLayout
        android:id="@+id/My_BankList_returnLayout"
        style="@style/top_APP"
        android:background="@drawable/layout_border_bottom1_white">
        <ImageView
            android:id="@+id/My_BankList_return"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_centerVertical="true"
            android:src="@drawable/return_arrow"/>
        <TextView
            android:id="@+id/My_BankList_TopTitle"
            style="@style/text_ww_20_text_grey_2"
            android:layout_centerInParent="true"
            android:text="我的银行卡"/>
        <TextView
            android:id="@+id/My_BankList_Take"
            android:layout_width="49dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/text_grey_2"
            android:textSize="16sp"
            android:text="管理"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.multshows.Views.MyListView
                android:id="@+id/My_BankList_MyListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:divider="@null"/>
            <Button
                android:id="@+id/My_BankList_AddBank"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/shape_green_4"
                android:layout_marginTop="34dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="17dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="+添加银行卡"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
