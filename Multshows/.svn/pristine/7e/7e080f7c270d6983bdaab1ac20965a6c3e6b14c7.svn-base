<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
        <ImageView
            android:id="@+id/no_view_image"
            android:layout_width="97dp"
            android:layout_height="111dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="111dp"
            android:src="@drawable/error_pic2"/>
    <TextView
        android:id="@+id/no_view_text"
        style="@style/text_ww_16_light_grey"
        android:layout_below="@id/no_view_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:text="还没有您的订单哦,赶快去购物吧"/>
    <Button
        android:id="@+id/no_view_Button"
        android:layout_width="120dp"
        android:layout_height="49dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_below="@id/no_view_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:background="@drawable/shape_alight_green_2"
        android:textColor="@color/text_green"
        android:textSize="17sp"
        android:text="去逛逛"/>
</RelativeLayout>