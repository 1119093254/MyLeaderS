<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/lookPhoto_dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/shape_white_9">
            <Button
                android:id="@+id/lookPhoto_dialog_Top"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:textColor="@color/text_black"
                android:textSize="17sp"
                android:text="拍照"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/layout_border_bottom1_white"/>
            <Button
                android:id="@+id/lookPhoto_dialog_Center"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:textColor="@color/text_black"
                android:textSize="17sp"
                android:text="手机相册"
                />
            <TextView
                android:id="@+id/lookPhoto_dialog_text"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/layout_border_bottom1_white"
                android:visibility="gone"/>
            <Button
                android:id="@+id/lookPhoto_dialog_Bottom"
                style="?android:attr/borderlessButtonStyle"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:textColor="@color/text_black"
                android:textSize="17sp"
                android:text="手机相册"
                />
        </LinearLayout>


        <Button
            android:id="@+id/lookPhoto_dialog_cancel"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:textColor="@color/text_black"
            android:textSize="17sp"
            android:background="@drawable/shape_white_9"
            android:text="取消"

            />
    </LinearLayout>
</RelativeLayout>