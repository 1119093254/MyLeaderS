<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="63dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/Person_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            fresco:placeholderImage="@drawable/info_photoyou"
            fresco:roundAsCircle="true"
            />
        <TextView
            android:layout_toRightOf="@+id/Person_pic"
            android:id="@+id/Person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:text=""
            android:textSize="16sp"
            android:textColor="@color/bg_black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dasdas"
           android:id="@+id/flowernum"
            android:textColor="@color/text"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"/>
        <ImageView
            android:id="@+id/flowerImage"
            android:layout_toLeftOf="@+id/flowernum"
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_commentimg02"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E1DFE0"
            android:layout_marginLeft="17dp"

            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

</LinearLayout>