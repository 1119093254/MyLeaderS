<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/friends_order_item_Time"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:gravity="center"
        android:textColor="@color/light_grey"
        android:textSize="12sp"
        android:text="时间"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:background="@drawable/shape_grey_white_4">
        <TextView
            android:id="@+id/friends_order_item_Title"
            style="@style/text_ww_15_text_grey_2"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:text="标题"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/friends_order_item_Photo"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_below="@id/friends_order_item_Title"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="13dp"
            fresco:placeholderImage="@drawable/defult"
            fresco:failureImage="@drawable/defult"
            />
        <TextView
            android:id="@+id/friends_order_item_Content"
            style="@style/text_ww_13_text_grey_2"
            android:layout_alignTop="@id/friends_order_item_Photo"
            android:layout_toRightOf="@id/friends_order_item_Photo"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="12dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text=""/>
        <LinearLayout
            android:id="@+id/friends_order_item_NumberLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/friends_order_item_Photo"
            android:layout_below="@id/friends_order_item_Content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp">
            <TextView
                android:id="@+id/friends_order_item_NumberText"
                style="@style/text_ww_13_light_grey"
                android:text=""/>
            <TextView
                android:id="@+id/friends_order_item_Number"
                style="@style/text_ww_13_light_grey"
                android:layout_marginRight="12dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text=""/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>