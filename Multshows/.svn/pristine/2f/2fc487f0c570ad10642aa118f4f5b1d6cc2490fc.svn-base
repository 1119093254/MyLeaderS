<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/background_grey">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layout_border_top1_bottom1_white">
        <RelativeLayout
            android:id="@+id/My_OrderList_items_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:background="@drawable/layout_border_bottom1_white">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/My_OrderList_items_photo"
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:scaleType="fitXY"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                fresco:placeholderImage="@drawable/defult"
                fresco:failureImage="@drawable/defult"/>
            <TextView
                android:id="@+id/My_OrderList_items_title"
                style="@style/text_ww_14_text_grey_2"
                android:layout_toRightOf="@id/My_OrderList_items_photo"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="30dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="标题"/>
            <TextView
                android:id="@+id/My_OrderList_items_state"
                style="@style/text_ww_14_text_grey_2"
                android:layout_toRightOf="@id/My_OrderList_items_photo"
                android:layout_alignBottom="@id/My_OrderList_items_photo"
                android:layout_marginLeft="16dp"
                android:text="状态"/>
            <TextView
                android:id="@+id/My_OrderList_items_Count"
                style="@style/text_ww_14_text_grey_2"
                android:layout_alignBottom="@id/My_OrderList_items_photo"
                android:layout_alignParentRight="true"
                android:layout_marginRight="17dp"
                android:text="x1"
                />
            <LinearLayout
                android:id="@+id/My_OrderList_items_moneyLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/My_OrderList_items_photo"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                >
                <TextView
                    style="@style/text_ww_14_text_green"
                    android:text="¥"
                    android:textColor="@color/yellow"/>
                <TextView
                    android:id="@+id/My_OrderList_items_money"
                    style="@style/text_ww_20_text_green"
                    android:text="0.00"
                    android:textColor="@color/yellow"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/My_OrderList_items_moneymLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/My_OrderList_items_photo"
                android:layout_below="@id/My_OrderList_items_title"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:visibility="gone">
                <TextView
                    style="@style/text_ww_14_text_grey_2"
                    android:text="宝贝价格:"/>
                <TextView
                    android:id="@+id/My_OrderList_items_moneym"
                    style="@style/text_ww_14_text_green"
                    android:layout_alignParentRight="true"
                    android:text="¥0.0"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/My_OrderList_items_moneyFeiLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/My_OrderList_items_photo"
                android:layout_below="@id/My_OrderList_items_moneymLayout"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:visibility="gone">
                <TextView
                    style="@style/text_ww_14_light_grey"
                    android:text="手续费:"/>
                <TextView
                    android:id="@+id/My_OrderList_items_moneyFei"
                    style="@style/text_ww_14_light_grey"
                    android:layout_alignParentRight="true"
                    android:text="-¥0.0"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/My_OrderList_items_RealMoneyLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/My_OrderList_items_moneyFeiLayout"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:visibility="gone">
                <TextView
                    style="@style/text_ww_16_text_green"
                    android:text="实收金额:"/>
                <TextView
                    android:id="@+id/My_OrderList_items_Realmoney1"
                    style="@style/text_ww_16_text_green"
                    android:layout_marginLeft="8dp"
                    android:text="¥0"/>
                <TextView
                    android:id="@+id/My_OrderList_items_Realmoney2"
                    style="@style/text_ww_14_text_green"
                    android:text=".0"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginLeft="16dp">
            <LinearLayout
                android:id="@+id/My_OrderList_items_callLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/My_OrderList_items_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/contact_seller_1"/>
                <TextView
                    android:id="@+id/My_OrderList_items_call"
                    style="@style/text_ww_14_text_grey_2"
                    android:layout_toRightOf="@id/My_OrderList_items_image"
                    android:layout_centerVertical="true"
                    android:text="联系卖家"/>
            </LinearLayout>

            <Button
                android:id="@+id/My_OrderList_items_give"
                android:layout_width="62dp"
                android:layout_height="25dp"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/shape_alight_green_2"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:textSize="14sp"
                android:textColor="@color/text_green"
                android:text="我要付款"/>
            <Button
                android:id="@+id/My_OrderList_items_close"
                android:layout_width="62dp"
                android:layout_height="25dp"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/shape_alight_grey_2"
                android:layout_toLeftOf="@id/My_OrderList_items_give"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:textSize="14sp"
                android:textColor="@color/text_grey_2"
                android:text="关闭交易"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>