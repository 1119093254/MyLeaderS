<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@drawable/border_commentlayout"
              android:gravity="center">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/likeTextLayout"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/momindex_iocn01"
                android:id="@+id/likeimage"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/likeimage"
                android:id="@+id/likeText"
                android:textColor="@color/white"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:text="赞    "/>
        </RelativeLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/likeTextLayout"
            android:layout_alignBottom="@+id/likeTextLayout"
            android:layout_marginLeft="10dp"
            android:id="@+id/likeLine"
            android:layout_toRightOf="@+id/likeTextLayout"
            android:background="#24BD8A"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/flowerLayout"
            android:layout_toRightOf="@+id/likeLine"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/momindex_iocn02"
                android:id="@+id/flowerimage"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/flowerimage"
                android:layout_marginLeft="4dp"
                android:id="@+id/flowerText"
                android:textColor="@color/white"
                android:layout_marginTop="4dp"
                android:text="送花"/>
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/likeTextLayout"
            android:layout_alignBottom="@+id/likeTextLayout"
            android:layout_marginLeft="10dp"
            android:id="@+id/flowerLine"
            android:layout_toRightOf="@+id/flowerLayout"
            android:background="#24BD8A"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/rewardLayout"
            android:layout_toRightOf="@+id/flowerLine"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/momindex_iocn03"
                android:id="@+id/rewardimage"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rewardText"
                android:layout_toRightOf="@+id/rewardimage"
                android:layout_marginLeft="4dp"
                android:textColor="@color/white"
                android:layout_marginTop="4dp"
                android:layout_marginRight="10dp"
                android:text="打赏"/>
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/commentImageLayout"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/momindex_iocn04"
                android:id="@+id/commentImage"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/commentImage"
                android:id="@+id/commentText"
                android:layout_marginLeft="4dp"
                android:textColor="@color/white"
                android:layout_marginTop="4dp"
                android:text="评论"/>
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/commentImageLayout"
            android:layout_alignBottom="@+id/commentImageLayout"
            android:layout_marginLeft="10dp"
            android:id="@+id/commentLine"
            android:layout_toRightOf="@+id/commentImageLayout"
            android:background="#24BD8A"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/commentLine"
            android:id="@+id/collectLayout">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/momindex_iocn05"
                android:id="@+id/collectimage"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/collectimage"
                android:layout_marginLeft="4dp"
                android:id="@+id/collectText"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:text="收藏"/>
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/collectLayout"
            android:layout_alignBottom="@+id/collectLayout"
            android:layout_marginLeft="10dp"
            android:id="@+id/collectLine"
            android:layout_toRightOf="@+id/collectLayout"
            android:background="#24BD8A"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/purchaseLayout"
            android:layout_toRightOf="@+id/collectLine"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/momindex_iocn06"
                android:id="@+id/purchaseimage"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/purchaseText"
                android:layout_toRightOf="@+id/purchaseimage"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:text="购买"/>
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp">
    </RelativeLayout>
</LinearLayout>