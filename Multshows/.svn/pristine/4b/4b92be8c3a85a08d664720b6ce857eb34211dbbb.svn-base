<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <ImageView
        android:id="@+id/iv_group_list_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/item_popup_arrow"/>
    <RelativeLayout
        android:layout_below="@+id/iv_group_list_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_bg_piont9">
        <ListView
            android:id="@+id/lvGroup"
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:dividerHeight="10dp"
            android:layout_centerHorizontal="true"></ListView>
    </RelativeLayout>

</RelativeLayout>
