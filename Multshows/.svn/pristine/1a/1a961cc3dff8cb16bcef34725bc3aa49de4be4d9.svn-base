<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.multshows.Activity.Task_TaskList_Activity">
    <!--头部布局-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/app_topColor">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <RadioGroup
            android:id="@+id/task_Fragment_taskList_group"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_centerInParent="true">
            <RadioButton
                android:id="@+id/task_Fragment_taskList_off"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:gravity="center"
                android:button="@null"
                android:textColor="@drawable/text_change_orange"
                android:background="@drawable/radiobtn_border_change"
                android:textSize="17sp"
                android:text="待完成"/>
            <RadioButton
                android:id="@+id/task_Fragment_taskList_on"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:textColor="@drawable/text_change_orange"
                android:background="@drawable/radiobtn_border_change"
                android:layout_marginLeft="3dp"
                android:textSize="17sp"
                android:text="已完成"/>
        </RadioGroup>
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/task_Fragment_taskList_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
