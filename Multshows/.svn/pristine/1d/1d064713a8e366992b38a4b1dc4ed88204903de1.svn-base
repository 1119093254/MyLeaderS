<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/vp_returnLayout"
        style="@style/top_APP"
        android:visibility="gone"
        android:background="@color/app_topColor">
        <ImageView
            android:id="@+id/vp_return"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_centerVertical="true"
            android:src="@drawable/index_return_arrow"/>

        <TextView
            android:id="@+id/Group_List_TopTitle"
            style="@style/text_ww_20_white"
            android:layout_centerInParent="true"
            android:text="欢迎页"/>
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_guide"
        android:layout_below="@id/vp_returnLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
    <RelativeLayout
        android:layout_width="77dp"
        android:layout_height="32dp"
        android:layout_marginTop="17dp"
        android:layout_marginRight="17dp"
        android:id="@+id/skipLayout"
        android:background="@drawable/btn_style5"
        android:layout_alignParentRight="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳过"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="18sp"/>
    </RelativeLayout>

    <Button
        android:id="@+id/guide_button"
        android:layout_width="180dp"
        android:layout_height="49dp"
        android:background="@drawable/shape_alight_green_17"
        android:text="立即体验"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:visibility="invisible"
        android:textColor="@color/green"
        android:textSize="18sp" />
</RelativeLayout>