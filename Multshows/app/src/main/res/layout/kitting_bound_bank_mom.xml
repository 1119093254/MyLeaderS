<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.multshows.Views.MyListView
                android:id="@+id/Bound_BankList_Mom_MyListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:divider="@null"/>
            <Button
                android:id="@+id/Bound_BankList_Mom_AddBank"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/shape_green_4"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="34dp"
                android:layout_marginBottom="17dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="+绑定新卡"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="9dp">
                <TextView
                    style="@style/text_ww_13_light_grey"
                    android:text="备注:"/>
                <TextView
                    style="@style/text_ww_13_light_grey"
                    android:text="1.提现到一麻袋账户无需手续费\n2.提现到银行卡需支付1元/笔手续费"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>