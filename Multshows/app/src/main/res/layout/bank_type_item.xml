<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/Bank_Type_item_Icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            fresco:failureImage="@drawable/info_photoyou"
            fresco:placeholderImage="@drawable/info_photoyou"
            />
        <TextView
            android:id="@+id/Bank_Type_item_Name"
            style="@style/text_ww_13_black"
            android:layout_toRightOf="@id/Bank_Type_item_Icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"/>
    </RelativeLayout>

</LinearLayout>