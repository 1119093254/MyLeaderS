<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Bound_BankList_Mom_ParentsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.multshows.Activity.Bound_BankList_Mom_Activity">
    <RelativeLayout
        android:id="@+id/Bound_BankList_Mom_returnLayout"
        style="@style/top_APP"
        android:background="@drawable/layout_border_bottom1_white">
        <ImageView
            android:id="@+id/Bound_BankList_Mom_return"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_centerVertical="true"
            android:src="@drawable/return_arrow"/>
        <TextView
            android:id="@+id/Bound_BankList_Mom_TopTitle"
            style="@style/text_ww_20_text_grey_2"
            android:layout_centerInParent="true"
            android:text="提现到"/>
    </RelativeLayout>
    <RadioGroup
        android:id="@+id/Bound_BankList_Mom_RadioGroup"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/Bound_BankList_Mom_RadioButton1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center"
            android:checked="true"
            android:background="@drawable/radiobutton_change"
            android:textColor="@drawable/text_change_radiobtn"
            android:textSize="16sp"
            android:text="一麻袋账号"/>
        <RadioButton
            android:id="@+id/Bound_BankList_Mom_RadioButton2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/radiobutton_change"
            android:textColor="@drawable/text_change_radiobtn"
            android:textSize="16sp"
            android:text="银行卡"/>
    </RadioGroup>
    <android.support.v4.view.ViewPager
        android:id="@+id/Bound_BankList_Mom_ViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
