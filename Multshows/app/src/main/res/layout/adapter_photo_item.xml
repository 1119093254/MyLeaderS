<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="02"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="9dp"
        android:id="@+id/photo_day"
        android:textColor="@color/text_black"
        android:textSize="24sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今天"
        android:textColor="@color/text_black"
        android:textSize="20sp"
        android:visibility="gone"
        android:id="@+id/TodayText"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="9dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
        android:text="9月"
        android:id="@+id/photo_month"
        android:layout_toRightOf="@+id/photo_day"
        android:layout_alignBottom="@+id/photo_day"
        android:textSize="10sp"/>
    <View
        android:layout_width="1dp"
        android:id="@+id/SplitLine"
        android:layout_toRightOf="@+id/photo_day"
        android:layout_height="12000dp"
        android:background="#E6E4E9"
        android:layout_marginLeft="22dp"
        android:layout_above="@+id/Line"
        />
    <com.multshows.Views.NineGridview.NineGridView
        android:layout_toRightOf="@+id/SplitLine"
        android:paddingRight="17dp"
        android:id="@+id/photo_nineGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="22dp"
        android:layout_marginBottom="16dp"
        app:ngv_gridSpacing="4dp"
        app:ngv_maxSize="100"
        app:ngv_mode="grid"
        android:visibility="gone"
        app:ngv_singleImageSize="100dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_alignLeft="@+id/photo_nineGrid"
        android:layout_below="@+id/photo_nineGrid"
        android:layout_alignParentBottom="true"
        android:id="@+id/Line"
        android:layout_height="1dp"
        android:background="#F8F8F9"
       />
    <View
        android:layout_width="1dp"
        android:layout_below="@+id/SplitLine"
        android:layout_alignParentBottom="true"
        android:id="@+id/Line1"
        android:layout_height="1dp"
        android:layout_toRightOf="@+id/photo_day"
        android:background="#E6E4E9"
        android:layout_marginLeft="22dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:textColor="#E6E4E9"
        android:text="●"
        android:layout_toRightOf="@+id/photo_day"
        android:layout_marginLeft="14dp"/>
</RelativeLayout>