<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/My_BabyInforation_parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/background_grey"
    tools:context="com.multshows.Activity.My_BabyInformation_Activity">
    <RelativeLayout
        android:id="@+id/My_BabyInformation_TopLayout"
        style="@style/top_APP"
        android:background="@drawable/layout_border_bottom1_white">
        <ImageView
            android:id="@+id/My_BabyInformation_return"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_centerVertical="true"
            android:src="@drawable/return_arrow"/>
        <TextView
            android:id="@+id/My_BabyInformation_Title"
            style="@style/text_ww_20_text_grey_2"
            android:layout_centerInParent="true"
            android:text="编辑宝贝信息"/>
        <TextView
            android:id="@+id/My_BabyInformation_save"
            style="@style/text_ww_17_black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="保存"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/My_BabyInformation_changHeader"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="@drawable/layout_border_bottom1_white">
        <TextView
            style="@style/text_ww_16_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="头像"/>
        <ImageView
            android:id="@+id/My_BabyInformation_image"
            android:layout_width="8dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/item_shipping_address_gonext"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/My_BabyInformation_header"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/My_BabyInformation_image"
            android:layout_marginRight="14dp"
            fresco:failureImage="@drawable/info_photoyou"
            fresco:placeholderImage="@drawable/info_photoyou"
            fresco:roundAsCircle="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="9dp"
        android:background="@drawable/layout_border_top1_bottom1_white">
        <RelativeLayout
            android:id="@+id/My_BabyInformation_changName"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/layout_border_bottom1_white">
            <TextView
                style="@style/text_ww_16_black"
                android:layout_centerVertical="true"
                android:text="宝贝昵称"/>
            <ImageView
                android:id="@+id/My_BabyInformation_image1"
                android:layout_width="8dp"
                android:layout_height="13dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/item_shipping_address_gonext"/>
            <TextView
                android:id="@+id/My_BabyInformation_name"
                style="@style/text_ww_16_light_grey"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:layout_toLeftOf="@id/My_BabyInformation_image1"
                android:layout_marginRight="14dp"
                android:hint="昵称"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/My_BabyInformation_changBirthday"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/layout_border_bottom1_white">
            <TextView
                style="@style/text_ww_16_black"
                android:layout_centerVertical="true"
                android:text="生日"/>
            <ImageView
                android:id="@+id/My_BabyInformation_image2"
                android:layout_width="8dp"
                android:layout_height="13dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/item_shipping_address_gonext"/>
            <TextView
                android:id="@+id/My_BabyInformation_Birthday"
                style="@style/text_ww_16_light_grey"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:layout_toLeftOf="@id/My_BabyInformation_image2"
                android:layout_marginRight="14dp"
                android:hint="请填写生日"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/My_BabyInformation_changSex"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginLeft="16dp">
            <TextView
                style="@style/text_ww_16_black"
                android:layout_centerVertical="true"
                android:text="性别"/>
            <ImageView
                android:id="@+id/My_BabyInformation_image3"
                android:layout_width="8dp"
                android:layout_height="13dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/item_shipping_address_gonext"/>
            <TextView
                android:id="@+id/My_BabyInformation_Sex"
                style="@style/text_ww_16_light_grey"
                android:gravity="right"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/My_BabyInformation_image3"
                android:layout_marginRight="14dp"
                android:hint="请选择性别"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/My_BabyInformation_IsDefault"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/layout_border_top1_bottom1_white">
        <TextView
            style="@style/text_ww_16_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="设为默认"/>
        <ImageView
            android:id="@+id/My_BabyInformation_IsDefault_Message"
            android:layout_width="57dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:src="@drawable/switch_off"/>
    </RelativeLayout>
    <TextView
        style="@style/text_ww_14_light_grey"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="6dp"
        android:text="设为默认并点击保存后,每次进入宝宝端直接进入默认宝宝账户"/>
</LinearLayout>
