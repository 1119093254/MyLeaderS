<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/OrderInformation_ParentsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_grey"
    android:fitsSystemWindows="true"
    tools:context="com.multshows.Activity.OrderInformation_Activity">
    <RelativeLayout
        android:id="@+id/OrderInformation_returnLayout"
        style="@style/top_APP"
        android:background="@drawable/layout_border_bottom1_white">
        <ImageView
            android:id="@+id/OrderInformation_return"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_centerVertical="true"
            android:src="@drawable/return_arrow"/>
        <TextView
            android:id="@+id/OrderInformation_TopTitle"
            style="@style/text_ww_20_text_grey_2"
            android:layout_centerInParent="true"
            android:text="订单详情"/>
        <LinearLayout
            android:id="@+id/OrderInformation_CallChat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/OrderInformation_CallChatImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/contact_seller"/>
            <TextView
                android:id="@+id/OrderInformation_CallChatText"
                style="@style/text_ww_13_black"
                android:layout_marginLeft="3dp"
                android:text="联系卖家"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/OrderInformation_BottomLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/layout_border_top1_white">
        <LinearLayout
            android:id="@+id/OrderInformation_BottomLayout_Btn1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="gone"
            android:gravity="center">
            <TextView
                android:id="@+id/OrderInformation_BottomLayout_Text1"
                style="@style/text_ww_16_black"
                android:text="按钮1"/>
            </LinearLayout>
        <LinearLayout
            android:id="@+id/OrderInformation_BottomLayout_Btn2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/text_green"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/OrderInformation_BottomLayout_Text2"
                style="@style/text_ww_16_white"
                android:text="按钮2"/>
            </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/OrderInformation_returnLayout"
        android:layout_above="@id/OrderInformation_BottomLayout"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/layout_border_top1_bottom1_white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:paddingLeft="16dp"
                android:background="@drawable/layout_border_bottom1_white">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/OrderInformation_photo"
                    android:layout_width="67dp"
                    android:layout_height="67dp"
                    fresco:failureImage="@drawable/defult"
                    fresco:placeholderImage="@drawable/defult"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/OrderInformation_StateType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/baby_radio"
                    android:textSize="14sp"
                    android:layout_alignTop="@id/OrderInformation_photo"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:text="已关闭"/>
                <TextView
                    android:id="@+id/OrderInformation_title"
                    style="@style/text_mw_14_text_grey_2"
                    android:layout_toRightOf="@id/OrderInformation_photo"
                    android:layout_alignTop="@id/OrderInformation_photo"
                    android:layout_toLeftOf="@id/OrderInformation_StateType"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="商品名称"/>
                <TextView
                    android:id="@+id/OrderInformation_money"
                    style="@style/text_ww_14_text_grey_2"
                    android:layout_toRightOf="@id/OrderInformation_photo"
                    android:layout_below="@id/OrderInformation_title"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="26dp"
                    android:text="¥"/>
                <TextView
                    android:id="@+id/OrderInformation_ShowsNumber"
                    style="@style/text_ww_14_light_grey"
                    android:layout_alignTop="@id/OrderInformation_money"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:text="x1"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:background="@drawable/layout_border_bottom1_white"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <TextView
                        style="@style/text_ww_14_light_grey"
                        android:text="商品总价"/>
                    <TextView
                        android:id="@+id/OrderInformation_ALLMoney"
                        style="@style/text_ww_14_light_grey"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:text="¥"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <TextView
                        style="@style/text_ww_14_light_grey"
                        android:text="运费"/>
                    <TextView
                        android:id="@+id/OrderInformation_YunFei"
                        style="@style/text_ww_14_light_grey"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:text="¥"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="16dp">
                    <TextView
                        style="@style/text_ww_16_text_grey_2"
                        android:text="订单总价"/>
                    <TextView
                        android:id="@+id/OrderInformation_RealMoney"
                        style="@style/text_ww_16_text_grey_2"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:text="¥"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@color/background_grey"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                >
                <TextView
                    style="@style/text_ww_15_text_grey_2"
                    android:text="收货人"/>
                <TextView
                    android:id="@+id/OrderInformation_userName"
                    style="@style/text_ww_14_light_grey"
                    android:layout_marginLeft="84dp"
                    android:text="收货人"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:background="@drawable/layout_border_bottom1_white">
                <TextView
                    style="@style/text_ww_15_text_grey_2"
                    android:text="收货地址"/>
                <TextView
                    android:id="@+id/OrderInformation_userAddress"
                    style="@style/text_ww_14_light_grey"
                    android:layout_marginLeft="84dp"
                    android:text="收货地址"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingLeft="16dp"
                android:paddingBottom="16dp">
                <TextView
                    style="@style/text_ww_15_text_grey_2"
                    android:text="卖家昵称"/>
                <TextView
                    android:id="@+id/OrderInformation_soldNickName"
                    style="@style/text_ww_14_light_grey"
                    android:layout_marginLeft="84dp"
                    android:text="昵称"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/OrderInformation_soldKDNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:visibility="gone"
                >
                <TextView
                    style="@style/text_ww_15_text_grey_2"
                    android:text="快递公司"/>
                <TextView
                    android:id="@+id/OrderInformation_soldKDName"
                    style="@style/text_ww_14_light_grey"
                    android:layout_marginLeft="84dp"
                    android:text="快递公司"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/OrderInformation_soldKDNumberLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:visibility="gone"
                >
                <TextView
                    style="@style/text_ww_15_text_grey_2"
                    android:text="快递单号"/>
                <TextView
                    android:id="@+id/OrderInformation_soldKDNumber"
                    style="@style/text_ww_14_light_grey"
                    android:layout_marginLeft="84dp"
                    android:text="快递单号"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                >
                <TextView
                    style="@style/text_ww_15_text_grey_2"
                    android:text="订单编号"/>
                <TextView
                    android:id="@+id/OrderInformation_Number"
                    style="@style/text_ww_14_light_grey"
                    android:layout_marginLeft="84dp"
                    android:text="000000"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">
                <TextView
                    android:id="@+id/OrderInformation_cancel"
                    style="@style/text_ww_15_text_grey_2"
                    android:text="成交时间"/>
                <TextView
                    android:id="@+id/OrderInformation_Time"
                    style="@style/text_ww_14_light_grey"
                    android:layout_marginLeft="84dp"
                    android:text="0000-00-00 00:00:00"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
