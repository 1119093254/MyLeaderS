<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <ImageView
        android:id="@+id/iv_group_list_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:src="@drawable/item_toparrow"/>
    <RelativeLayout
        android:layout_below="@+id/iv_group_list_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_whitebg">
        <ListView
            android:id="@+id/lvGroup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:cacheColorHint="@color/white"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:divider="@color/white"
            android:scrollbars="none"
            android:layout_centerHorizontal="true"></ListView>
    </RelativeLayout>

</RelativeLayout>
