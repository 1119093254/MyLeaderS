<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"

    >
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:id="@+id/My_BacgroundImage"
        fresco:placeholderImage="@drawable/info_photoyou"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:alpha="0.8"
        android:paddingBottom="30dp"
        android:background="#191E24">

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/toplayout">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/otherPageReturn"
            android:src="@drawable/index_return_arrow"/>

        <TextView
            android:id="@+id/My_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="18dp"/>

        <ImageView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"

            />
    </RelativeLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_below="@+id/toplayout"
        android:id="@+id/My_Userpic"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_centerHorizontal="true"
        fresco:roundAsCircle="true"
        fresco:placeholderImage="@drawable/info_photoyou"
        />

    <LinearLayout
        android:id="@+id/ly_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/My_Userpic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ly_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_info"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/MyLookText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/myLookNum"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:text="他看过的"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/myLookNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_toLeftOf="@+id/ic_spit_left"
            android:paddingBottom="8dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <TextView

            android:id="@+id/ic_spit_left"
            android:layout_width="0.3dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/white"/>

        <LinearLayout
            android:id="@+id/ly_fans_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/ic_spit_left"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:id="@+id/LookMyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="看过他的"
                android:textColor="@color/white"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/LookMynum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly_action"
        android:id="@+id/tagText"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="9dp">

        <TextView
            android:id="@+id/My_userTag1"
            style="@style/text_ww_10_green"
            android:background="@drawable/green_labelimg2"
            android:gravity="center_vertical"
            android:paddingLeft="13dp"
            android:paddingRight="4dp"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/My_userTag2"
            style="@style/text_ww_10_green"
            android:background="@drawable/green_labelimg2"
            android:gravity="center_vertical"
            android:paddingLeft="13dp"
            android:paddingRight="4dp"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/My_userTag3"
            style="@style/text_ww_10_green"
            android:background="@drawable/green_labelimg2"
            android:gravity="center_vertical"
            android:paddingLeft="13dp"
            android:paddingRight="4dp"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:visibility="invisible"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tagText"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true">

        <Button
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_signature"
            android:background="@drawable/btn_style2"
            android:text="私聊"
            android:id="@+id/chat_her"
            android:textColor="#ffffff"
            android:textSize="10sp"/>

        <Button
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_signature"
            android:layout_marginLeft="49dp"
            android:background="@drawable/btn_style2"
            android:text="添加好友"
            android:id="@+id/My_addFriends"
            android:textColor="#ffffff"
            android:textSize="10sp"
            />
    </LinearLayout>


</RelativeLayout>
