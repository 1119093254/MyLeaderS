<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/My_Order_SendOut_ParentsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_grey"
    android:fitsSystemWindows="true"
    tools:context="com.multshows.Activity.My_Order_SendOut_Activity">
    <RelativeLayout
        android:id="@+id/My_Order_SendOut_returnLayout"
        style="@style/top_APP"
        android:background="@drawable/layout_border_bottom1_white">

        <ImageView
            android:id="@+id/My_Order_SendOut_return"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_centerVertical="true"
            android:src="@drawable/return_arrow"/>

        <TextView
            android:id="@+id/My_Order_SendOut_TopTitle"
            style="@style/text_ww_20_text_grey_2"
            android:layout_centerInParent="true"
            android:text="发货"/>
        <!--<ImageView
            android:id="@+id/My_Order_SendOut_SYS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/item_scan"/>-->
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layout_border_bottom1_white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/layout_border_bottom1_white">
            <TextView
                style="@style/text_ww_16_black"
                android:layout_centerVertical="true"
                android:text="运单号:"/>
            <TextView
                android:id="@+id/My_Order_SendOut_Get"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:textColor="@color/text_green"
                android:textSize="16sp"
                android:text="匹配"/>
            <EditText
                android:id="@+id/My_Order_SendOut_EditText"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:layout_height="match_parent"
                android:background="@null"
                android:layout_marginLeft="120dp"
                android:layout_toLeftOf="@id/My_Order_SendOut_Get"
                android:textColor="@color/text_black"
                android:textColorHint="@color/text_white_c"
                android:textSize="16sp"
                android:hint="请输入运单号"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/My_Order_SendOut_Layout"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginLeft="16dp">
            <TextView
                style="@style/text_ww_16_black"
                android:layout_centerVertical="true"
                android:text="快递公司:"/>
            <EditText
                android:id="@+id/My_Order_SendOut_NumberEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:background="@null"
                android:layout_marginLeft="120dp"
                android:textColor="@color/text_black"
                android:textColorHint="@color/text_white_c"
                android:textSize="16sp"
                android:hint="请输入物流名称"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/My_Order_SendOut_Button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_alignParentBottom="true"
            android:background="@color/text_green"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="确定"/>
    </RelativeLayout>
</LinearLayout>
