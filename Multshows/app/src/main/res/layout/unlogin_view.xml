<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="116dp">
    <ImageView
        android:id="@+id/UnLogin_image"
        android:layout_width="187dp"
        android:layout_height="105dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/error_pic4"
        />

    <TextView
        android:id="@+id/UnLogin_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="63dp"
        android:layout_marginRight="63dp"
        android:layout_below="@id/UnLogin_image"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:textColor="@color/unlogin_text"
        android:gravity="center"
        android:text=""/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/UnLogin_text">

        <Button
            android:id="@+id/UnLogin_login"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="90dp"
            android:layout_height="39dp"
            android:background="@drawable/shape_alight_green_4"
            android:textSize="17sp"
            android:textColor="@color/text_green"
            android:text="登录"/>
        <Button
            android:id="@+id/UnLogin_ZC"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="90dp"
            android:layout_height="39dp"
            android:layout_marginLeft="17dp"
            android:background="@drawable/shape_alight_green_4"
            android:textSize="17sp"
            android:textColor="@color/text_green"
            android:text="注册"/>
    </LinearLayout>
</RelativeLayout>
</RelativeLayout>