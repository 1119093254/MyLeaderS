<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg">

    <RelativeLayout
        android:id="@+id/phoneLayout"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="67dp"
        android:background="@color/white">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:layout_toLeftOf="@+id/InviteClearImage"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="5dp"
            android:singleLine="true"
            android:layout_toRightOf="@+id/phoneEditextImage"
            android:background="@null"
            android:id="@+id/inviteEditext"
            android:hint="请输入邀请码"
            android:textSize="16sp"/>
        <ImageView
            android:id="@+id/InviteClearImage"
            android:layout_width="26dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            android:src="@drawable/icon_delete"/>
    </RelativeLayout>
    <Button
        android:layout_marginTop="33dp"
        android:layout_below="@+id/phoneLayout"
        android:id="@+id/invitenext"
        android:text="下一步"
        android:enabled="false"
        style="@style/btnstyle"
        android:textColor="@color/text_gray"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/invitenext">
        <Button
            android:id="@+id/skipButton"
            android:text="跳过"
            style="@style/btnstyle2"
            android:textColor="@color/green"
            />
        <Button
            android:id="@+id/skipButton2"
            android:text="跳过"
            android:textColor="@color/green"
            android:visibility="invisible"
            style="@style/btnstyle2"
            />
    </RelativeLayout>

</RelativeLayout>