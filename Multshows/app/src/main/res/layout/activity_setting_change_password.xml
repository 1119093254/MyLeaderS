<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Setting_ChangePassword_ParentsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/background_grey"
    tools:context="com.multshows.Activity.Setting_ChangePassword_Activity">
    <RelativeLayout
        android:id="@+id/Setting_ChangePassword_returnLayout"
        style="@style/top_APP"
        android:background="@drawable/layout_border_bottom1_white">
        <ImageView
            android:id="@+id/Setting_ChangePassword_return"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_centerVertical="true"
            android:src="@drawable/return_arrow"/>
        <TextView
            android:id="@+id/Setting_ChangePassword_TopTitle"
            style="@style/text_ww_20_text_grey_2"
            android:layout_centerInParent="true"
            android:text="修改密码"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/layout_border_top1_bottom1_white">
        <TextView
            android:id="@+id/Setting_ChangePassword_text"
            style="@style/text_ww_16_black"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:text="旧密码"/>
        <ImageView
            android:id="@+id/Setting_ChangePassword_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:layout_marginRight="16dp"
            android:src="@drawable/icon_delete"/>
        <EditText
            android:id="@+id/Setting_ChangePassword_editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:layout_toRightOf="@id/Setting_ChangePassword_text"
            android:layout_toLeftOf="@id/Setting_ChangePassword_delete"
            android:layout_marginLeft="17dp"
            android:inputType="textPassword"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:textSize="16sp"
            android:textColor="@color/text_black"
            android:textColorHint="@color/text_white_c"
            android:hint="请输入旧密码"/>

    </RelativeLayout>
    <Button
        android:id="@+id/Setting_ChangePassword_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/shape_grey_4"
        android:enabled="false"
        android:textSize="17sp"
        android:textColor="@color/text_white_c"
        android:text="下一步"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_marginRight="17dp">
        <TextView
            android:id="@+id/Setting_ChangePassword_found"
           style="@style/text_ww_14_light_grey"
           android:layout_alignParentRight="true"
            android:text="找回密码"/>
    </RelativeLayout>

</LinearLayout>
