<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Bound_YMD_ParentsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/background_grey"
    android:orientation="vertical"
    tools:context="com.multshows.Activity.BoundYMD_Activity">
    <RelativeLayout
        android:id="@+id/My_BabyInformation_TopLayout"
        style="@style/top_APP"
        android:background="@drawable/layout_border_bottom1_white">
        <ImageView
            android:id="@+id/Bound_YMD_return"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_centerVertical="true"
            android:src="@drawable/return_arrow"/>
        <TextView
            android:id="@+id/Bound_YMD_Title"
            style="@style/text_ww_20_text_grey_2"
            android:layout_centerInParent="true"
            android:text="绑定一麻袋"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/Bound_YMD_YMD_OK"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:visibility="gone"
        android:background="@drawable/layout_border_top1_bottom1_white">
        <TextView
           android:id="@+id/Bound_YMD_YMD_text"
            style="@style/text_ww_16_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:text="账号:"/>
       <TextView
           android:id="@+id/Bound_YMD_YMD_YMD"
           style="@style/text_ww_16_light_grey"
           android:layout_toRightOf="@id/Bound_YMD_YMD_text"
           android:layout_marginLeft="14dp"
           android:layout_centerVertical="true"
           android:text=""/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/Bound_YMD_YMD_NO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layout_border_top1_bottom1_white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/layout_border_bottom1_white">
            <TextView
                style="@style/text_ww_16_black"
                android:layout_centerVertical="true"
                android:text="账号:"/>
            <EditText
                android:id="@+id/Bound_YMD_Number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:singleLine="true"
                android:layout_marginLeft="80dp"
                android:textSize="16sp"
                android:textColor="@color/text_black"
                android:textColorHint="@color/light_grey"
                android:hint="填写一麻袋钱包账号"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/layout_border_bottom1_white">
                <TextView
                    style="@style/text_ww_16_black"
                    android:layout_centerVertical="true"
                    android:text="姓名:"/>
                <EditText
                    android:id="@+id/Bound_YMD_Password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:singleLine="true"
                    android:layout_marginLeft="80dp"
                    android:textSize="16sp"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/light_grey"
                    android:hint="填写真实姓名"/>
            </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginLeft="16dp">
            <TextView
                style="@style/text_ww_16_black"
                android:layout_centerVertical="true"
                android:text="身份证号:"/>
            <EditText
                android:id="@+id/Bound_YMD_IDCord"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:layout_marginLeft="80dp"
                android:digits="0123456789xyzXYZ"
                android:singleLine="true"
                android:inputType="number"
                android:textSize="16sp"
                android:textColor="@color/text_black"
                android:textColorHint="@color/light_grey"
                android:hint="填写身份证号"/>
        </RelativeLayout>
    </LinearLayout>
        <Button
            android:id="@+id/Bound_YMD_OK"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/shape_green_4"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:text="立即绑定"/>
</LinearLayout>
