<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.multshows.Activity.ChioceIdentity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_toplayout"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/ChioceVipLayout"
            android:background="@color/green">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/regparent_img"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/regparent_img"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册成为家长"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:layout_below="@+id/regparent_img"
                    android:layout_marginTop="12dp"
                    android:id="@+id/parentText"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="我有宝宝"
                    android:textSize="17sp"
                    android:layout_marginTop="16dp"
                    android:layout_below="@+id/parentText"
                    android:id="@+id/haveBabyText"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="给宝宝发布任务，养成好习惯"
                    android:textSize="14sp"
                    android:id="@+id/TextTask"
                    android:layout_marginTop="6dp"
                    android:layout_below="@+id/haveBabyText"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="发布圈子，探讨育儿经验"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp"
                    android:layout_below="@+id/TextTask"
                    />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/ChioceParentLayout"
            android:background="#e95fad">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/regvip_img"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/regvip_img"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册成为贵宾"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:layout_below="@+id/regvip_img"
                    android:layout_marginTop="12dp"
                    android:id="@+id/VipText"
                    android:layout_centerHorizontal="true"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/VipText"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="我没有宝宝"
                        android:textSize="17sp"
                        android:layout_marginTop="14dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="查看他人作品，进行点评、送"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="花、打赏，增加好友互动促进"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="感情！"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="贵宾添加宝宝即可升级为家长"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:layout_below="@+id/TextTask"
                        />
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
