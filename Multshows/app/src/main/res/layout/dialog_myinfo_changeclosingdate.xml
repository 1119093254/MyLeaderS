<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 	xmlns:android="http://schemas.android.com/apk/res/android"
				   android:layout_width="match_parent"
				   android:layout_height="match_parent"
				   android:background="#00000000">
	<RelativeLayout
				  android:id="@+id/ly_myinfo_changeClosingdate"
				  android:layout_width="match_parent"
				  android:layout_height="match_parent"
				  android:background="#00000000"
				  android:orientation="vertical" >

		<LinearLayout
            android:id="@+id/ly_myinfo_changeClosingdate_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dialog_selector"
            android:orientation="vertical"
			android:layout_alignParentBottom="true"
            >
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="54dp"
				android:background="@drawable/layout_border"
				>

				<TextView
					android:id="@+id/btn_myinfo_sure"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_marginRight="28dp"
					android:text="完成"
					android:textColor="#01a2ec"
					android:layout_centerVertical="true"
					android:textSize="16sp" />


				<TextView
					android:id="@+id/btn_myinfo_cancel"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="关闭"
					android:textColor="#01a2ec"
					android:layout_centerVertical="true"
					android:textSize="16sp"
					android:layout_marginLeft="28dp"
					/>
			</RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:gravity="center_vertical">
                <com.multshows.Views.WheelView
                    android:id="@+id/wv_Closingdate_year"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    />
                <com.multshows.Views.WheelView
                    android:id="@+id/wv_Closingdate_month"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    />
                <com.multshows.Views.WheelView
                    android:id="@+id/wv_Closingdate_day"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    />
				<com.multshows.Views.WheelView
					android:id="@+id/wv_Closingdate_hour"
					android:layout_width="0dip"
					android:layout_weight="1"
					android:layout_height="match_parent"
					/>
            </LinearLayout>

        </LinearLayout>

	</RelativeLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="2dp"
		android:background="#F1F1F1"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="120dp"
		/>
	<View
		android:layout_width="match_parent"
		android:layout_height="2dp"
		android:background="#F1F1F1"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="80dp"
		/>
</RelativeLayout>
