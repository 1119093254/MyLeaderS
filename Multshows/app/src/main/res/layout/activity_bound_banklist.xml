<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Bound_BankList_ParentsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/background_grey"
    android:orientation="vertical"
    tools:context=".Activity.BoundBankList_Activity">
    <RelativeLayout
        android:id="@+id/Bound_BankList_returnLayout"
        style="@style/top_APP"
        android:background="@drawable/layout_border_bottom1_white">
        <ImageView
            android:id="@+id/Bound_BankList_return"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_centerVertical="true"
            android:src="@drawable/return_arrow"/>
        <TextView
            android:id="@+id/Bound_BankList_TopTitle"
            style="@style/text_ww_20_text_grey_2"
            android:layout_centerInParent="true"
            android:text="选择银行卡"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.multshows.Views.MyListView
                android:id="@+id/Bound_BankList_MyListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:divider="@null"/>
            <Button
                android:id="@+id/Bound_BankList_AddBank"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/shape_green_4"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="34dp"
                android:layout_marginBottom="17dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="+绑定新卡"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="9dp">
                <TextView
                    style="@style/text_ww_13_light_grey"
                    android:text="备注:"/>
                <TextView
                    style="@style/text_ww_13_light_grey"
                    android:text="1.提现到一麻袋账户无需手续费\n2.提现到银行卡需支付1元/笔手续费"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
